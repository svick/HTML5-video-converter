<Window x:Class="Video_converter.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Video_converter"
	Title="HTML 5" Width="240" Height="250" ResizeMode="CanMinimize">
	<Window.Style>
		<Style TargetType="local:MainWindow">
			<Style.Triggers>
				<Trigger Property="ShowProgressBar" Value="True">
					<Setter Property="ContentTemplate">
						<Setter.Value>
							<DataTemplate>
								<local:ProgressBar />
							</DataTemplate>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Style>
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
			<TextBlock FontSize="15" HorizontalAlignment="Center">Převést video</TextBlock>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<TextBox Name="fileNameTextBox" Width="150" Margin="5">C:\</TextBox>
				<Button Margin="5" Click="File_Click">Soubor</Button>
			</StackPanel>
		</StackPanel>
		<StackPanel Grid.Row="1" Grid.Column="0">
			<TextBlock TextAlignment="Center">Formát</TextBlock>
			<CheckBox Margin="3" Name="webm">WebM</CheckBox>
			<CheckBox Margin="3" Name="h264">H.264</CheckBox>
			<CheckBox Margin="3" Name="theora">Theora</CheckBox>
		</StackPanel>
		<StackPanel Grid.Row="1" Grid.Column="1">
			<TextBlock TextAlignment="Center">Velikost</TextBlock>
			<CheckBox Margin="3" Name="height480" Tag="480">480p</CheckBox>
			<CheckBox Margin="3" Name="height720" Tag="720">720p</CheckBox>
			<CheckBox Margin="3" Name="height1080" Tag="1080">1080p</CheckBox>
		</StackPanel>
		<Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Convert_Click">
			<TextBlock Margin="5" FontSize="15">
				Převést
			</TextBlock>
		</Button>
	</Grid>
</Window>
