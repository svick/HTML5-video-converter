<UserControl x:Class="Video_converter.ProgressBar"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.3">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.0" 
              Color="#EDF3FA" />
                    <GradientStop Offset="1.0" 
              Color="#FFFFFF" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Grid.Background>
        
		<Grid.RowDefinitions>
            <RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="18" HorizontalAlignment="Center" Foreground="#003399" Margin="10">Převádění videa</TextBlock>
		<ProgressBar Grid.Row="1" Height="30" Margin="10" />
		<Button Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Name="Cancel" Click="Cancel_Click">
			<TextBlock Margin="20,1" FontSize="13">
				    Zrušit
			</TextBlock>
		</Button>
	</Grid>
</UserControl>
